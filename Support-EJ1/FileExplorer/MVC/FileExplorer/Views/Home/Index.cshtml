@{
    ViewBag.Title = "Home Page";
}

@(Html.EJ().FileExplorer("fileExplorer")
                .Path("~/FileExplorerContent/")
                .AjaxAction(@Url.Content("/Home/FileActionDefault"))
                .ClientSideEvents(e => e.BeforeAjaxRequest("BeforeAjaxRequest").Select("Select"))
)

<script type="text/javascript">
    function BeforeAjaxRequest(args) {
        //Ajax successAfter event
        args.ajaxSettings.successAfter = function (args) {
            var fileObj = $("#fileExplorer").data("ejFileExplorer");
            //Invoking FileExplorer sorting method with dateModified sort type
            fileObj._sorting("dateModified", false);
            fileObj._sortingActioncomplete();
        } 
    }

    //Select event function of FileExplorer 

    function Select(args) {
        var fileObj = $("#fileExplorer").data("ejFileExplorer");
        if (fileObj.option("selectedItems").length === 0) {
            //Invoking FileExplorer sorting method with dateModified sort type
            fileObj._sorting("dateModified", false);
            fileObj._sortingActioncomplete();
        }

    } 

</script>