@{
    ViewBag.Title = "Home Page";
}

@{
    List<String> toolsList = new List<string>() {
                                    "editing",
                                    "getProperties"
                                };

    List<String> editing = new List<string>() {
                                    "Delete",
                                    "Upload",
                                    "Download"
                                };
    List<String> getProperties = new List<string>() {
                                    "Refresh"
                                };
}

@(Html.EJ().FileExplorer("fileExplorer")
                .Path("~/FileExplorerContent/")
                .AjaxAction(@Url.Content("/Home/FileActionDefault"))
                .ShowContextMenu(false)
)

@(Html.EJ().FileExplorer("ReporterUpload_FileExplorer")
                            .Path(Model.UploadImageLocation)
                            .AjaxAction(Url.Content("ReporterUpload_FileExplorerDefault"))
                            .Tools(tools =>
                                tools.Editing(editing)
                                .GetProperties(getProperties)
                            )
                            .ToolsList(toolsList)
                            .FileTypes("*.jpg, *.jpeg, *.png, *.gif")
                            .ShowContextMenu(false)
                            .ShowToolbar(true)
                            .ShowNavigationPane(false)
                            .Width("100%")
                            .Height("100%")
                            .UploadSettings(us => us.AutoUpload(true))
                            .Layout(LayoutType.Tile)
                            .IsResponsive(true)
                            .EnableThumbnailCompress(false)
                            .AllowMultiSelection(true)
                            .ClientSideEvents(cse => cse.Select("imageSelected").Remove("imageRemoved").UploadComplete("imageUploadComplete").Unselect("imageUnselected"))
)