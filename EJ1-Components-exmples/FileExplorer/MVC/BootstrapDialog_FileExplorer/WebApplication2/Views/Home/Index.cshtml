@{
    ViewBag.Title = "Home Page";
}

<button type="button" id="code" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Open Modal</button>

<button onclick="GetProjectFileExplorer()">load service</button>
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog" style="height:100%;width:100%">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <div class="control-section">
                    <div class="content-wrapper">
                        <table class="slider_table">
                            <tbody>
                                <tr>
                                    <td>
                                        <div class="sliderwrap">
                                            @(Html.EJ().FileExplorer("fileExplorer")
                                            .ShowToolbar(false)
                                            .ShowContextMenu(false)
                                            ))
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Event Triggers after the dialog open.
    $("#myModal").on('shown.bs.modal', function () {

        // Refresh the Splitter component.
        var fileExplorerObj = $("#fileExplorer_splitter").data("ejSplitter");
        fileExplorerObj.refresh();
        // Adjust the size of filemanager component.
        var Filemanager = $("#fileExplorer").data("ejFileExplorer");
        Filemanager.adjustSize();

    });

    function GetProjectFileExplorer() {
    
        $("#fileExplorer").ejFileExplorer({
            path: "~/FileExplorerContent",
            ajaxAction: "/Home/FileActionDefault"
        });

    }
</script>