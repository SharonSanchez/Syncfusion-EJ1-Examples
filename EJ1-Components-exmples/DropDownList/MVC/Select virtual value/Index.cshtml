@{
    ViewBag.Title = "Home Page";
}


<div class="content-container-fluid">
    <div class="row">
        <div class="cols-sample-area">
            <div class="frame">
                <div class="control">
                    <div class="ctrllabel">Select a Company Name</div>
                    <input type="text" id="CompanyNames" />
                </div>
            </div>
        </div>
        <button onclick="select()">
            select loaded value
        </button>
        <button onclick="selectunload()">
            select virtual value
        </button>
    </div>
</div>
<script type="text/javascript">
    var dm = ej.DataManager({
        url: "https://mvc.syncfusion.com/services/Northwnd.svc/Orders"
    });

    $(function () {
        $('#CompanyNames').ejDropDownList({
            dataSource: dm,
            fields: { text: "CustomerID", value: 'OrderID' },
            width: 260,
            itemsCount: 10,
            allowVirtualScrolling: true,
            virtualScrollMode: "normal"
        });
    });

    function select() {
        var dl = $('#CompanyNames').ejDropDownList("instance");
        dl.setModel({ value: 10250 });

    }

    function selectunload() {
        var dl = $('#CompanyNames').ejDropDownList("instance");
        dl.setModel({ value: 16488 });
    }
</script>

